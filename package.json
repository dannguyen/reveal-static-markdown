{
  "name": "reveal-static-markdown",
  "version": "0.0.1",
  "main": "index.js",
  "description": "A command-line tool to turn Markdown files into Reveal.js powered slideshows",
  "scripts": {
    "clean": "mkdir -p bin; rm -rf bin/*",
    "compile": "npm run clean; babel src/index.js --out-file bin/cli.js; babel src/lib --out-dir bin/lib",
    "test": "jest",
    "prepublish": "npm run compile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dannguyen/reveal-static-markdown.git"
  },
  "keywords": [
    "reveal",
    "slideshow",
    "markdown"
  ],
  "author": "Dan Nguyen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dannguyen/reveal-static-markdown/issues"
  },
  "homepage": "https://github.com/dannguyen/reveal-static-markdown#readme",
  "dependencies": {
    "commander": "^2.9.0",
    "glob": "^7.0.5",
    "handlebars": "^4.0.5",
    "html": "0.0.10",
    "marked": "^0.3.5",
    "open": "0.0.5",
    "reveal": "0.0.4"
  },
  "bin": {
    "reveal-static": "./bin/cli.js"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.10.1",
    "babel-jest": "^12.1.0",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "jest-cli": "^12.1.1",
    "temp": "^0.8.3"
  }
}
